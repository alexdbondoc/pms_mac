<%= render 'share/errors', obj: @department %>
<div class="row">
	<div class="col-md-12">
		<%= form_for(@department, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :name %>
				</div>

				<div class="col-sm-8">
					<%= f.text_field :name, class: "form-control", placeholder: "Enter Department", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label "Group" %>
				</div>

				<div class="col-sm-8">
					<%= f.collection_select(:group_id, Group.all, :id, :name,  {include_blank: 'Please Select'}) %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>
			</div>
		<% end %>
		
	</div>
</div>