<h1 align="center">List of All Departments</h1>
<div align="center">
  <%= will_paginate %>
  <% @departments.each do |dept| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{dept.name}", department_path(dept) %>
          </li>
          <li><small></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <center><%= will_paginate %></center>
  <center><%= link_to "Create New Department", new_department_path %></center>
</div>