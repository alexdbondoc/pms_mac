<%= render 'share/errors', obj: @officer %>
<div class="row">
	<div class="col-md-12">
		<%= form_for(@officer, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :approving_officer %>
				</div>

				<div class="col-sm-8">
					<%= f.collection_select(:user_id, User.all, :id, :empname,  {include_blank: 'Please Select'}) %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :department %> <%= f.label :name %>
				</div>

				<div class="col-sm-8">
					<%= f.collection_select(:department_id, Department.all, :id, :name,  {include_blank: 'Please Select'}) %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :designation %> <%= f.label :name %>
				</div>

				<div class="col-sm-8">
					<%= f.collection_select(:designation_id, Designation.all, :id, :name,  {include_blank: 'Please Select'}) %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>
			</div>
		<% end %>
		
	</div>
</div>