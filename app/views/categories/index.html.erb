<h1 align="center">List of All Categories</h1>
<div align="center">
  <%= will_paginate %>
  <% @categories.each do |cat| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{cat.name}", category_path(cat) %>
          </li>
          <li><small></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <center><%= will_paginate %></center>
  <center><%= link_to "Create New Category", new_category_path %></center>
</div>