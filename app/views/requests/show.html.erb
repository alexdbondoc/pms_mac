<h2 align="center">Request Type: <%= @request.category.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<ul class="listing">
		<div class="row center">
			<div class="col-md-4 col-md-offset-4">
				<li>Created by:</li>
				<li class="article-title"> <%= link_to @request.user.empname, user_path(@request.user) %> </li>
				<li> <b><%= @request.department.name %> Department </b></li>
				<li><small><%= pluralize(@request.user.requests.count, "Request") if @request.user.requests %></small></li>
			</div>
		</div>
	</ul>
	<h4 class="center description"> <strong> Contents: </strong> </h4>
	<ul class="listing">
		<div class="row center">
			<div class="col-md-4 col-md-offset-4">
				<li>Aprroving Officer: <%= @request.officer.user.empname %></li>
				<li>Product Type: <%= @request.type.name %></li>
				<li>Product Description: <%= @request.product.name %></li>
				<li>Requested Quantity: <%= pluralize(@request.qty, "#{@request.unit.name}") %></li>
				<li>Purpose: <%= @request.reason %></li>
				<li>Status: <%= @request.status %></li>
			</div>
		</div>
	</ul>
	<hr>
		<div class="article-actions center">
		<% if logged_in? && (current_user == @request.user  || current_desig == "System Admin") %>
			<%= link_to "Update this request", edit_request_path(@request), class: "btn btn-xs btn-primary" %>
			<%= link_to "Delete this request", requests_path(@request), method: :delete, 
												data: {confirm: "Are you sure you want to delete this request?"}, 
													class: "btn btn-xs btn-danger" %>
		<% elsif logged_in? && (current_user.id == @request.officer.user_id) %>
			<%= link_to "Approve", request_path(@request), method: :put, 
                                      data: {confirm: "Are you sure you want to approve this request?"}, 
                                        class: "btn btn-xs btn-success" %>
		<% end %>
			<%= link_to "View all requests", requests_path, class: "btn btn-xs btn-primary" %>
		</div>
	</hr>
</div>