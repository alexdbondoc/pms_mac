<h1 align="center">List of All Groups</h1>
<div align="center">
  <%= will_paginate %>
  <% @groups.each do |grp| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{grp.name}", group_path(grp) %>
          </li>
          <li><small></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <center><%= will_paginate %></center>
  <center><%= link_to "Create New Group", new_group_path %></center>
</div>